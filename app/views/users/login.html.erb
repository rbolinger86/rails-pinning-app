<div class="text-center">
  <h1>Login</h1>
  <% if @error.present? %>
    <div class="error">
      <h2><%= "#{@error}" %></h2>
    </div>
  <% end %>
  <%= form_tag "/login" %>
    <%= label_tag 'e-mail', nil, :class => "login-email" %>
    <%= text_field_tag 'email' %><br>
    <%= label_tag 'password', nil, :class => "login-password" %>
    <%= text_field_tag 'password' %><br>
    <%= submit_tag("Login!", :class => "login-submit") %><br>
    <%= link_to 'Sign Up!', new_user_path %>
</div>
